                <TextBlock
                    Margin="4,0,0,0"
                    Style="{StaticResource BodyTextBlockStyle}"
                    Text="{Binding ItemCount, Converter={StaticResource ItemCountConverter}}" />
            </StackPanel>
        </DataTemplate>

