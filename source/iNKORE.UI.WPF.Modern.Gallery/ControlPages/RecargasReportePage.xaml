    <!--  This grid acts as a root panel for the page.  -->
    <Grid Background="{DynamicResource HomePageBackgroundBrush}">
        <!--RowDetailsTemplate="{StaticResource RowDetailsTemplate}"-->
        <!--RowDetailsVisibilityMode="Collapsed"-->

        <Grid Margin="25,15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock FontSize="24" FontWeight="Bold" Text="Reporte de recargas." />

            <DataGrid
                x:Name="dataGrid"
                AutoGenerateColumns="False"
                GridLinesVisibility="Horizontal"
                HeadersVisibility="Column"
                Margin="0,45,0,0"
                ItemsSource="{Binding}"
                VirtualizingPanel.IsVirtualizingWhenGrouping="True"
                VirtualizingPanel.VirtualizationMode="Recycling"
                MouseDoubleClick="Row_DoubleClick"
                IsReadOnly="True"
            >
                <DataGrid.Columns>
                    <DataGridTextColumn
                        Width="105"
                        Binding="{Binding ID}"
                        Header="ID" />
                    <DataGridTextColumn
                        Width="200"
                        Header="Amount"
                        Binding="{Binding amount}" />
                    <DataGridTextColumn
                        Width="135"
                        Binding="{Binding provider}"
                        Header="Provider" />
                    <DataGridTextColumn
                        Width="260"
                        Binding="{Binding cellphone}"
                        Header="Cellphone" />
                    <DataGridTextColumn
                        Width="180"
                        Binding="{Binding point_sale}"
                        Header="Punto de venta" />
                    <DataGridTextColumn
                        Width="180"
                        Binding="{Binding sales_person}"
                        Header="Vendedor(a)" />
                </DataGrid.Columns>
                <DataGrid.GroupStyle>
                    <GroupStyle ContainerStyle="{StaticResource DataGridRowGroupContainerStyle}" HeaderTemplate="{StaticResource RowGroupHeaderTemplate}" />
                </DataGrid.GroupStyle>
            </DataGrid>
        </Grid>
    </Grid>
